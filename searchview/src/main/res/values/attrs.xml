<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SearchFieldView">
        <attr name="searchViewHint" format="string"></attr>
        <attr name="searchViewBackground" format="reference"></attr>
        <attr name="searchEditTextBackground" format="reference"></attr>
        <attr name="searchEditTextSize" format="dimension"></attr>
        <attr name="searchEditTextColor" format="color"></attr>
        <attr name="historyTextSize" format="dimension"></attr>
        <attr name="historyTextColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <!--    标签之间的间距-->
        <attr name="lineSpace" format="dimension"/>
        <!--    每一行之间的间距-->
        <attr name="rowSpace" format="dimension"/>
    </declare-styleable>
</resources>
